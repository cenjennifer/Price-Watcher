{
    "manifest_version": 2,

    "name": "Price Tracker",
    "description": "This extension tracks the change in price for watched items",
    "version": "1.0",
        "permissions": [
        "*://*/*",
        "contextMenus",
        "activeTab",
        "background", //if you need the browser to start up early
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "money.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js", "node_modules/jquery/dist/jquery.min.js", "node_modules/angular/angular.js"]
    },
    "content_scripts": [{ //how you interact with content loaded into the browser 
        "matches": ["*://*/*"],
        "js": ["highlight.js", "script.js"],
        "run_at": "document_start",
        "all_frames": true
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

// Browser action...click -> popup
// Background permission -> makes Chrome start at login <- keeps chrome running
// Extensions can collaborate with each other